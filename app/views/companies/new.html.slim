= content_for :javascripts do
  javascript:
    var vueForm;
    document.addEventListener('DOMContentLoaded', function() {
      vueForm = new Company.Form('#company-form');
    });

  style
    |
      .container-form {
        max-width: 720px;
        margin: 3rem auto;
        background: #fff;
        padding: 2rem 2.5rem;
        border-radius: 1.25rem;
        box-shadow: 0 4px 20px rgba(0, 0, 0, 0.08);
      }
      .form-label {
        font-weight: 600;
        margin-bottom: 0.5rem;
      }
      .form-control, .form-select-city {
        border-radius: 0.5rem;
        padding: 0.75rem;
        width: 100%;
        border: 1px solid #ced4da;
        background-color: #fff;
        color: #495057;
        font-size: 1rem;
        line-height: 1.5;
        appearance: none;
      }
      .btn-orange {
        background-color: #ff7a00;
        border: none;
        color: white;
        padding: 0.75rem 1.5rem;
        border-radius: 0.75rem;
        font-weight: bold;
        transition: background-color 0.3s ease;
      }
      .btn-orange:hover {
        background-color: #e96e00;
      }

.container-form
  h1.text-orange.text-center.mb-3 Nova Filial
  p.text-muted.text-center.mb-4 Preencha os dados abaixo para cadastrar a nova filial.

  #company-form
    = form_with model: @company, local: true do |f|

      .mb-4
        = f.label :city_id, 'Cidade', class: 'form-label'
        = f.collection_select :city_id, City.all.order(:name), :id, :name, {}, { class: 'form-select-city' }

      .mb-4
        = f.label :name, 'Nome da Filial', class: 'form-label'
        = f.text_field :name, class: 'form-control'

      .mb-4
        = f.label :cnpj, 'CNPJ', class: 'form-label'
        = f.text_field :cnpj, class: 'form-control'

      .mb-4
        = f.label :email, 'Email', class: 'form-label'
        = f.email_field :email, class: 'form-control'

      .mb-4
        = f.label :phone, 'Telefone', class: 'form-label'
        = f.telephone_field :phone, class: 'form-control'

      .text-center.mt-4
        = f.submit 'Salvar', class: 'btn btn-orange'
